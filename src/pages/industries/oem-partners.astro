---
export const prerender = true;

import { Package, Rocket, TrendingUp, Handshake } from 'lucide-react';
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import ProductHero from '@/components/dynmaic/product-hero';
import ProductDashboard from '@/components/dynmaic/product-dashboard';
import AIAutomation from '@/components/dynmaic/ai-automation';
import Features from '@/components/sections/features';
import Features2 from '@/components/sections/features2';;
import ProductLogs from '@/components/dynmaic/product-logs';
import CalComWidget from '@/components/sections/calcom-widget';

// Dashboard screenshots and feature cards
const dashboardScreenshots = [
  {
    src: '/lhpc/compute-pools.png',
    alt: 'Turnkey AI/HPC solutions',
  },
  {
    src: '/lhpc/workflow-configuration.png',
    alt: 'Pre-integrated orchestration',
  },
  {
    src: '/lhpc/silicone-allocation.png',
    alt: 'Customer success dashboard',
  },
];

const dashboardFeatures = [
  {
    title: 'Integrated Software Value-Add',
    description: 'Bundle Amalgamy with hardware sales—deliver turnkey AI/HPC appliances that differentiate from commodity competition.',
    iconName: 'Package',
    cta: 'Learn More',
    href: '/contact',
  },
  {
    title: 'Faster Customer Success',
    description: 'Pre-integrated solutions work out-of-box—reduce customer time-to-value and increase satisfaction.',
    iconName: 'Rocket',
    cta: 'View Solutions',
    href: '/contact',
  },
  {
    title: 'Competitive Cloud Alternative',
    description: 'Cloud-like experience on-premises with bare-metal performance—offer sovereignty and control hyperscalers cannot match.',
    iconName: 'TrendingUp',
    cta: 'See Benefits',
    href: '/contact',
  },
  {
    title: 'OEM-Agnostic Platform',
    description: 'Works with all hardware vendors—customers trust neutral orchestration that avoids vendor lock-in.',
    iconName: 'Handshake',
    cta: 'Partner With Us',
    href: '/contact',
  },
];

// Hero chart data
const oemPartnerGrowthData = [
  { time: 'Q1', utilization: 42 },
  { time: 'Q2', utilization: 58 },
  { time: 'Q3', utilization: 72 },
  { time: 'Q4', utilization: 85 },
  { time: 'Q1+1', utilization: 92 },
  { time: 'Q2+1', utilization: 95 },
];

// AI Automation workflow cards
const automationCards = [
  {
    id: 'appliance',
    title: 'Turnkey HPC Appliance',
    subtitle: 'Supermicro + Amalgamy solution deployed in 48 hours',
    iconName: 'Package',
    iconColor: 'text-purple-500',
    position: 'absolute top-0 left-0',
    isGenerating: false,
  },
  {
    id: 'sovereign',
    title: 'Sovereign Cloud',
    subtitle: 'Oracle + Amalgamy for national infrastructure',
    iconName: 'Building2',
    iconColor: 'text-blue-500',
    position: 'absolute top-32 left-0',
    isGenerating: false,
  },
  {
    id: 'generating',
    title: 'AI Optimizing Integration',
    subtitle: '',
    iconName: undefined,
    iconColor: '',
    position: 'absolute top-18 right-0',
    isGenerating: true,
  },
  {
    id: 'edge',
    title: 'Edge AI Platform',
    subtitle: 'Supermicro edge computing with orchestration',
    iconName: 'Folder',
    iconColor: 'fill-green-500 text-green-500',
    position: 'absolute right-0 bottom-0',
    isGenerating: false,
  },
];

---

<DefaultLayout
  title="Amalgamy for OEMs - Differentiate Hardware with Orchestration Software"
  description="Hardware manufacturers deliver turnkey AI/HPC solutions with Amalgamy's OEM-agnostic orchestration platform. Partner with us to accelerate customer success. Schedule a call."
>
  <ProductHero
    client:load
    headline="Differentiate Hardware with"
    headlineGradient="World-Class Orchestration"
    description="Amalgamy enables OEMs to deliver turnkey AI/HPC solutions, accelerate customer time-to-value, and compete against software-only cloud providers. Integrated software that drives customer success."
    chartData={oemPartnerGrowthData}
    chartMetricLabel="Partner Solution Growth"
    chartChangePercent="+125%"
    ctaPrimary="Schedule Partnership Call"
    ctaPrimaryHref="/contact"
    ctaSecondary="Download Brief"
    ctaSecondaryHref="/contact"
    trustLine="Partnering with leading hardware manufacturers worldwide"
    showTerminal={true}
  />

  <ProductDashboard
    client:load
    title="Complete Platform for OEM-Integrated Solutions"
    tagline="Four Core Partnership Capabilities"
    screenshots={dashboardScreenshots}
    featureCards={dashboardFeatures}
  />

  <AIAutomation
    client:load
    aiPromptText="Optimize deployment for turnkey HPC appliance"
    headline="Intelligent orchestration that"
    headlineGradient="accelerates customer success"
    description="Amalgamy's pre-integrated solutions deliver working AI/HPC infrastructure in hours—automatically configuring optimal settings for customer workloads and hardware configurations."
    cards={automationCards}
  />

  <Features client:load />

  <Features2 client:load />

  <ProductLogs
    client:load
    title="Trusted by"
    titleGradient="Leading Hardware Manufacturers"
    subtitle="OEM-Agnostic Platform for Customer Success"
    description="Amalgamy partners with Supermicro, NVIDIA, IBM, Oracle, AWS, and Microsoft to deliver turnkey AI/HPC solutions that accelerate customer success."
    ctaText="Schedule Partnership Call"
    ctaHref="/contact"
    showTerminal={true}
  />

  <CalComWidget
    client:load
    title="Explore Partnership Opportunities"
    subhead="Schedule a call with our partnerships team to discuss how Amalgamy can differentiate your hardware solutions"
    calLink="team/thisway/launch-hpc"
  />
</DefaultLayout>
