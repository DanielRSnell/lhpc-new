                    // Prevent double-firing on devices that support both touch and click
                    if (e.type === 'click' && touchHandled) {
                        touchHandled = false;
                        return;
                    }

                    if (e.type === 'touchend') {
                        touchHandled = true;
                        e.preventDefault();
                    }

                    // Call the terminal workflow function
                    if (typeof window.startTerminalWorkflow === 'function') {
                        window.startTerminalWorkflow();
                    } else {
                        console.error('startTerminalWorkflow function not found');
                    }
                };

                // Add both click and touch listeners for maximum compatibility
                getStartedBtn.addEventListener('click', handleGetStarted);
                getStartedBtn.addEventListener('touchend', handleGetStarted, { passive: false });
            }

            // Fade in Spline iframe when loaded
            const splineIframe = document.getElementById('aura-spline');
            const splineContainer = document.querySelector('.spline-container');

            if (splineIframe && splineContainer) {
                splineIframe.addEventListener('load', () => {
                    splineContainer.classList.remove('opacity-0');
                    splineContainer.classList.add('opacity-100');
                });

                // Fallback: fade in after 3 seconds if load event doesn't fire
                setTimeout(() => {
                    if (splineContainer.classList.contains('opacity-0')) {
                        splineContainer.classList.remove('opacity-0');
                        splineContainer.classList.add('opacity-100');
                    }
                }, 3000);
            }
        });
