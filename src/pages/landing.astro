---
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import GovernmentHero from '@/components/sections/government-hero';
import GovernmentFeatures from '@/components/sections/government-features';
import GovernmentDashboard from '@/components/sections/government-dashboard';
import AIAutomation from '@/components/sections/ai-automation';
---

<DefaultLayout
  title="LaunchHPC for Government | AI/HPC Orchestration Platform"
  description="Secure, compliant AI/HPC orchestration for federal agencies, defense contractors, and government organizations. Meet FISMA, FedRAMP, and DoD requirements."
>
  <GovernmentHero client:load />
  <GovernmentFeatures client:load />
  <GovernmentDashboard client:load />
  <div class="relative">
    <div
      class="to-accent/50 bg-chart-1 absolute top-0 left-0 -z-3 hidden size-40 -translate-x-1/4 -translate-y-1/2 rounded-full will-change-transform lg:block"
    >
    </div>
    <AIAutomation client:load />
  </div>
</DefaultLayout>